# SHORT-description: Create an image for MediaTek SoC based boards with UEFI
# long-description: Creates a partitioned image for MediaTek SoC based board with UEFI supports

part fip --source rawcopy --sourceparams="file=${DEPLOY_DIR_IMAGE}/fip.bin" --part-name bootloaders --part-type 0x8301 --align 512 --fixed-size 4M
part /boot/efi --source bootimg-sota-efi --sourceparams="loader=grub-efi" --fstype=vfat --active --label efi --align 4096 --use-uuid --size 512M --uuid=c12a7328-f81f-11d2-ba4b-00a0c93ec93b
part / --source otaimage --fstype=ext4 --align 4096 --use-uuid
bootloader --source bootimg-sota-efi --ptable gpt --configfile="grub-ota.cfg"
