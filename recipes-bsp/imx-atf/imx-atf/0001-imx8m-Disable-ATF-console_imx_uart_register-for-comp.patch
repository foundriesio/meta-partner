 plat/imx/imx8m/imx8mn/imx8mn_bl31_setup.c | 4 ++++
 plat/imx/imx8m/imx8mp/imx8mp_bl31_setup.c | 4 ++++
 3 files changed, 12 insertions(+), 1 deletion(-)

diff --git a/plat/imx/imx8m/imx8mm/imx8mm_bl31_setup.c b/plat/imx/imx8m/imx8mm/imx8mm_bl31_setup.c
index 54e8a7579..4f16dc24b 100644
--- a/plat/imx/imx8m/imx8mm/imx8mm_bl31_setup.c
+++ b/plat/imx/imx8m/imx8mm/imx8mm_bl31_setup.c
@@ -127,7 +127,9 @@ static void bl31_tzc380_setup(void)
 void bl31_early_platform_setup2(u_register_t arg0, u_register_t arg1,
 		u_register_t arg2, u_register_t arg3)
 {
+#if VAR_ENABLE_IMX_UART
 	static console_uart_t console;
+#endif
 	int i;
 
 	/* Enable CSU NS access permission */
@@ -142,11 +144,12 @@ void bl31_early_platform_setup2(u_register_t arg0, u_register_t arg1,
 	imx_csu_init(csu_cfg);
 
 	imx8m_caam_init();
-
+#if VAR_ENABLE_IMX_UART
 	console_imx_uart_register(IMX_BOOT_UART_BASE, IMX_BOOT_UART_CLK_IN_HZ,
 		IMX_CONSOLE_BAUDRATE, &console);
 	/* This console is only used for boot stage */
 	console_set_scope(&console.console, CONSOLE_FLAG_BOOT);
+#endif
 
 	/*
 	 * tell BL3-1 where the non-secure software image is located
